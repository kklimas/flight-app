{
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "./dist",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", ".idea"],
  "include": ["src/**/*.ts"]
}
